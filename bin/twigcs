#!/usr/bin/env php
<?php

use Allocine\Twigcs\Console\Application;
use Allocine\Twigcs\LintCommand;

if (file_exists(__DIR__ . '/../../../autoload.php')) {
    require_once __DIR__ . '/../../../autoload.php';
} else {
    require_once __DIR__ . '/../vendor/autoload.php';
}

(new Application())->run();
